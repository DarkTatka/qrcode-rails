<% if flash[:error] %>
<div class="error">
<%= flash[:error] %>
</div>
<% end %>

<div id="main">
<% form_tag '/create' do -%>
  <h2>Create a QRCode</h2>
  <div><label>URL or message</lable> <br/><%= text_area_tag 'msg', (@msg || 'http://www.reality.hk/'), :rows => 10, :cols => 40 %></div>

  <div id="advance" style="display:<%= @advance ? 'block' : 'none' %>">
  	<div>
		<label>QRCode Level</lable><br/>
		<%= select_tag('version',  "<option>1</option><option>2</option><option>3</option><option selected=\"true\">4</option><option>5</option><option>6</option><option>7</option><option>8</option><option>9</option><option>10</option>") %>
	</div>
  	<div>
		<label>Error Correction Level</lable> <br/>
		<%= select_tag('ecc', "<option>l</option><option>m</option><option>q</option><option selected=\"true\">h</option>") %>
	</div>
  </div>
  <div>
		<%= submit_tag 'Generate' %> 
		<% unless @advance %> <%= link_to 'Advance', :advance => true %> <% end %>
  </div>
<% end -%>
</div>
